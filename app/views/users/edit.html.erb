<% if logged_in? && current_user == @user %>

<h1> Editer mon profil </h1>

<%= form_tag user_path(@user), method: :put do %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
