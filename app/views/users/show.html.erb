<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1> 
      	<%= gravatar_for @user %>
      	<%= @user.name %> 
      </h1>
      <p> <%= @user.email %>
   <p> <%= link_to('Editer mon profil', edit_user_path) %> </p>

    </section>
  </aside>
</div>

<h2> Evénements organisés par <%= @user.name %> à venir</h2>

      <table class="table table-hover">
  		<tr>
    	<th>Nom de l'événement</th>
    	<th>Date</th>
    	<th>Lieu</th>

   		<th></th>

 	 	</tr>
		
	<% @user.created_events.each do |event| %>
  <% if event.date > Date.today %> 
		<tr>
		<td> <%= event.name %> </td>
		<td> <%= event.date.strftime("%d-%m-%Y")  %> </td>
		<td> <%= event.place %> </td>
		<td> <%= link_to('En voir plus', event_path(event)) %> </td>
		<% if !current_user.nil? && current_user.id == event.creator.id %>
		<td> <%= link_to('Editer mon événement', edit_event_path(event)) %> </td>
		<% end %>
		</tr>
		<% end %>
    <% end %>

  </table>

<h2> Evénements organisés par <%= @user.name %> passés</h2>

      <table class="table table-hover">
      <tr>
      <th>Nom de l'événement</th>
      <th>Date</th>
      <th>Lieu</th>
      <th></th>
      <th></th>
    </tr>
    
  <% @user.created_events.each do |event| %> 
  <% if event.date < Date.today %> 
    <tr>
    <td> <%= event.name %> </td>
    <td> <%= event.date.strftime("%d-%m-%Y") %> </td>
    <td> <%= event.place %> </td>
    <td> <%= link_to('En voir plus', event_path(event)) %> </td>
    <% if logged_in? %>
    <td> <%= link_to('Editer mon événement', edit_event_path(event)) %> </td>
    <% end %>
    </tr>
    <% end %>
    <% end %>

  </table>

 
<h2> Evénements auxquels <%= @user.name %> participe </h2>

      <table class="table table-hover">
      <tr>
      <th>Nom de l'événement</th>
      <th>Date</th>
      <th>Lieu</th>
      <th></th>

    </tr>

  <% @user.attended_events.each do |event| %> 
    <tr>
    <td> <%= event.name %> </td>
    <td> <%= event.date.strftime("%d-%m-%Y") %> </td>
    <td> <%= event.place %> </td>
    <td> <%= link_to('En voir plus', event_path(event)) %> </td>

    </tr>
    <% end %>
  </table>

